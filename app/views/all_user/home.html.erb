<div id="user_nav">
  <% if user_signed_in? %>
      Signed in as <%= current_user.name %>. Not you?
    <%= link_to "Sign out", destroy_user_session_path, :method => :delete %>
    <table class="table table-striped">
    <thead>
      <tr>
        <th>Users</th>
        <th>Edit</th>
        <th>Delete</th>
        <th>Ban</th>
      </tr>
    </thead>
    <% User.all.each do |u| %>

      <tbody>
        <tr>
          <td>
            <%= u.email %>
          </td>
          <td>
            <%= link_to "Edit", edit_user_path(u) %> 
          </td>
          <td>
            <%= link_to "Delete", user_path(u), method: :delete, data: { confirm: 'Are you sure?' } %>  
          </td>
          <td>
            <% if u.banned? %>
              <%= link_to "Unban", unban_user_path(u) %>
            <% else %>  
              <%= link_to "Ban", ban_user_path(u) %>
          <% end %>    
          </td>
        </tr>
        </tbody>
    <% end %>
    </table>
  <% else %>
    <h1>Welcome to AUTH APP</h1>
    <%= link_to "Sign up", new_user_registration_path %> or <%= link_to "Sign in", new_user_session_path %>
    <p><%= link_to image_tag("facebook.png", size: "25x25"), user_omniauth_authorize_path(:facebook) %>
    <%= link_to image_tag("twitter.png", size: "25x25"), user_omniauth_authorize_path(:twitter) %>
    <%= link_to image_tag("vkontakte.png", size: "25x25"), user_omniauth_authorize_path(:vkontakte) %>
    <%= link_to image_tag("github.png", size: "25x25"), user_omniauth_authorize_path(:github) %></p>
  <% end %>

</div>

